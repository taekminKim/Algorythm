package boj;

import java.util.Scanner;

/*
 * 하나씩 다돌아보자..
 */
public class q14501 {
	static int cost[];
	static int day[];
	static int n;
	static int max;

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);

		n = sc.nextInt();
		cost = new int[16];
		day = new int[16];
		for (int i = 1; i <= n; i++) {
			cost[i] = sc.nextInt();
			day[i] = sc.nextInt();
		}
		max = 0;
		dfs(1, 0);
		System.out.println(max);
	}

	public static void dfs(int d, int sum) {
		if (d == n + 1) {
			if (sum > max) {
				max = sum;
			}
		}
		if (d + day[d] <= n + 1)
			dfs(d + T[d], sum + cost[d]);
		if (d + 1 <= n + 1)
			dfs(d + 1, sum);
	}
}
